<%= flash[:notice] %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'book_list', user: @findbook.user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= image_tag @findbook.user.get_profile_image(100,100) %>
              <%= link_to user_path(@findbook.user.id), class: 'text_lig' do %>
                <%= @findbook.user.name %>
              <% end %>
            </td>
            <td>
              <%= @findbook.title %>
            </td>
            <td>
              <%= @findbook.body %>
            </td>
            <td>
              <% if @findbook.user == current_user %>
                <%= link_to "Edit", edit_book_path, class:"btn btn-sm btn-success" %>
              <% end %>
            </td>
            <td>
              <% if @findbook.user == current_user %>
                <%= link_to "Delete",book_path(@findbook.id), method: :delete, class:"btn btn-sm btn-danger" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>