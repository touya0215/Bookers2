<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title %>
        </div>

        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body %>
        </div>

        <div class="form-group">
          <%= f.submit 'Update Book', class:"btn btn-success" %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book.id), class: 'text_light' %>
      |
      <%= link_to "Back", books_path, class: 'text_light' %>
    </div>
  </div>
</div>