<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <% if @book.image.attached? %>
        <%= image_tag user.image, size: "100x100" %>
      <% else %>
        <%= image_tag 'no_image', size: "100x100" %>
      <% end %>
      <tbody>
        <tr></tr>
        <div class="form-group">
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
        </div>
        <div class="form-group">
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </div>
        <div class="nav-item">
          <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block edit_user_path' do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
      </tbody>
      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
      <div class="form-group">
        <h4>Title</h4>
        <%= f.text_field :title %>
      </div>

      <div class="form-group">
        <h4>Opinion</h4>
        <%= f.text_area :body %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book', class:"btn btn-success" %>
      </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table calss="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <% if @book.image.attached? %>
                <%= image_tag user.image, size: "100x100" %>
              <% else %>
                <%= image_tag 'no_image', size: "100x100" %>
              <% end %>
            </td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>

  </div>
</div>