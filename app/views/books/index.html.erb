<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3" >
      <%= render 'book_list', user: current_user%>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table calss="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= image_tag book.user.get_profile_image(100,100) %>
            </td>
            <td>
              <%= link_to book_path(book.id), class: 'text_light' do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>

  </div>
</div>